0 ' showstrings.bas
10 CLS
20 GOSUB 200:PRINT@0,"FT:";FT;" ST:";ST;" MS:";MS;
30 PRINT@288,"STRING";
40 INPUT A$:GOSUB 100
50 GOTO 20

100 ' SHOW STRINGS
110 GOSUB 200
120 ' VR = VIDRAM
130 VR=&H420:L=FT
140 IF L<=ST THEN POKE VR,&H60 ELSE POKE VR,PEEK(L)
150 VR=VR+1:IF VR>VR+288 THEN RETURN
160 L=L+1:IF L>MS THEN RETURN
170 GOTO 140

200 ' GET STRING INFO
201 ' FT = FRETOP
202 ' ST = STRTAB
203 ' MS = MEMSIZE
210 FT=PEEK(&H21)*256+PEEK(&H22)
220 ST=PEEK(&H23)*256+PEEK(&H24)
230 MS=PEEK(&H27)*256+PEEK(&H28)
240 RETURN
