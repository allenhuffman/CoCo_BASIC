20 CLS:C=3
30 'INPUT "RADIUS 1-96:";R
40 'IF (R < 1 OR R > 96) GOTO 30
45 FOR R=1 TO 10
50 R2 = R*R : K = 0.618
60 CLS 0
65 FOR A=0 TO 15:PRINT@A*32,STRING$(31,"X");:NEXT
80 SX = INT (64/2)-0.5
90 SY = INT (32/2)-0.5

100 FOR X = 0 TO R
110 Y = SQR (R2 - X*X)
120 IF Y < X-1 THEN X=100:NEXT:GOTO 300
140 SET( SX + X,  Y*K + SY, C)
150 SET( SX - X,  Y*K + SY, C)
160 SET( SX + X, -Y*K + SY, C)
170 SET( SX - X, -Y*K + SY, C)
180 SET( SX + Y,  X*K + SY, C)
190 SET( SX - Y,  X*K + SY, C)
200 SET( SX + Y, -X*K + SY, C)
210 SET( SX - Y, -X*K + SY, C)
220 NEXT

300 H=0
305 IF H<R AND POINT(32,16-H)<>3 THEN H=H+1:GOTO 305
310 W=0
315 IF W<R AND POINT(32-W,16)<>3 THEN W=W+1:GOTO 315
320 PRINT@0,W,H;
330 IF INKEY$="" THEN 330
400 NEXT
