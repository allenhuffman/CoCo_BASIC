10 REM randplot.bas
20 POKE 65495,0
30 L=191:I=255
40 INPUT "LINES (0-191)";L
50 INPUT "ITERATIONS (0-255)";I
60 DIM X(I)
70 PMODE 4,1:PCLS:SCREEN 1,1
80 N=RND(L+1)-1
90 PSET(X(N),N)
100 X(N)=X(N)+1
110 IF X(N)=I THEN 140
120 GOTO 80
130 REM SHOW RESULTING STATS
140 SCREEN 1,0:SOUND 100,2
150 IF INKEY$="" THEN 150
160 SCREEN 0,0
170 C=0
180 FOR A=0 TO L
190 PRINT USING"###=###%  ";A;INT(X(A)/I*100);
200 C=C+1:IF C=3 THEN PRINT:C=0
210 NEXT
220 GOTO 220
