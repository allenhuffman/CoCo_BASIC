0 REM scale-gp.bas
10 SW=32/4 ' SCALE WIDTH
20 SH=16/3 ' SCALE HEIGHT
30 SM=.1   ' SCALE INC/DEC
40 S=.5    ' SCALE FACTOR
70 TM=TIMER:FOR Z=1 TO 100:W=INT(SW*S):H=INT(SH*S):P=&HF-INT(W/&H2)+(&H7-INT(H/&H2))*&H20:CLS:L$=STRING$(W,&HAF):FORA=P+&H20 TOP+H*&H20 STEP&H20:PRINT@A,L$;:NEXT:IFH<&H1 ORH>&HF THENSM=-SM
170 S=S+SM:NEXT

180 ' 60=NTSC 50=PAL
190 PRINT:PRINT (TIMER-TM)/60;"SECONDS"
